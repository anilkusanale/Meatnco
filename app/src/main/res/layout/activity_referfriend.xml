<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.Referfriend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="405dp"
            android:padding="15dp"
            android:src="@drawable/referr" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="10dp"-->
<!--            android:text="Refer A Friend \n and earn reward points."-->
<!--            android:textColor="@color/text_primary_dark"-->
<!--            android:gravity="center"-->
<!--            android:layout_gravity="center"-->
<!--            android:textSize="22dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Your Coupon Code"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/coupan_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/meatnco"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="28dp"/>

        <Button
            android:id="@+id/refer_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Refer Now"
            android:background="@color/meatnco"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>